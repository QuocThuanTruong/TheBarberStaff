<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/half_rounded"
    tools:context=".Fragment.TotalPriceFragment">

   <LinearLayout
       android:orientation="vertical"
       android:weightSum="10"
       android:padding="8dp"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <TextView
           android:layout_marginTop="12dp"
           android:text="INVOICE"
           android:textStyle="bold"
           android:textSize="24sp"
           android:gravity="center_horizontal"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"/>

       <View
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:paddingLeft="12dp"
           android:paddingRight="12dp"
           android:layout_marginTop="12dp"
           android:layout_marginBottom="12dp"
           android:background="@color/colorAccent"/>

       <androidx.cardview.widget.CardView
           app:cardElevation="0dp"
           app:cardCornerRadius="18dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">

           <TableLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:stretchColumns="*">

               <TableRow
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:padding="8dp">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Salon: "
                       android:fontFamily="@font/gilroy_medium"
                       android:textSize="20sp"/>

                   <TextView
                       android:id="@+id/tv_salon_name"
                       android:layout_height="wrap_content"
                       android:layout_width="wrap_content"
                       android:fontFamily="@font/gilroy_medium"
                       android:text="Salon1"
                       android:textSize="20sp"
                       android:textStyle="bold"/>

               </TableRow>

               <TableRow
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:padding="8dp">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:fontFamily="@font/gilroy_medium"
                       android:text="Barber: "
                       android:textSize="20sp"/>

                   <TextView
                       android:id="@+id/tv_barber_name"
                       android:layout_height="wrap_content"
                       android:layout_width="wrap_content"
                       android:fontFamily="@font/gilroy_medium"
                       android:text="David"
                       android:textSize="20sp"
                       android:textStyle="bold"/>

               </TableRow>

               <TableRow
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:padding="8dp">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Customer: "
                       android:textSize="20sp"/>

                   <TextView
                       android:id="@+id/tv_customer_name"
                       android:layout_height="wrap_content"
                       android:layout_width="wrap_content"
                       android:fontFamily="@font/gilroy_medium"
                       android:text="Salon1"
                       android:textSize="20sp"
                       android:textStyle="bold"/>

               </TableRow>

               <TableRow
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:padding="8dp">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:fontFamily="@font/gilroy_medium"
                       android:text="Phone: "
                       android:textSize="20sp"/>

                   <TextView
                       android:id="@+id/tv_customer_phone"
                       android:layout_height="wrap_content"
                       android:layout_width="wrap_content"
                       android:text="+389294631"
                       android:fontFamily="@font/gilroy_medium"
                       android:textSize="20sp"
                       android:textStyle="bold"/>

               </TableRow>

               <TableRow
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:padding="8dp">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Time: "
                       android:textSize="20sp"/>

                   <TextView
                       android:id="@+id/tv_time"
                       android:layout_height="wrap_content"
                       android:layout_width="wrap_content"
                       android:text="Salon1"
                       android:textSize="20sp"
                       android:fontFamily="@font/gilroy_medium"
                       android:textStyle="bold"/>

               </TableRow>

           </TableLayout>
       </androidx.cardview.widget.CardView>



       <LinearLayout
           android:orientation="vertical"
           android:padding="8dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:padding="2dp">

               <TextView
                   android:layout_marginTop="8dp"
                   android:text="Service: "
                   android:textSize="20sp"
                   android:fontFamily="@font/gilroy_semibold"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"/>


           </RelativeLayout>

           <androidx.recyclerview.widget.RecyclerView
               android:id="@+id/recycler_services"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_gravity="center_vertical"/>

       </LinearLayout>

       <LinearLayout
           android:orientation="vertical"
           android:padding="8dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:padding="2dp">

               <TextView
                   android:text="Extra items:"
                   android:textSize="20sp"
                   android:fontFamily="@font/gilroy_semibold"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"/>


           </RelativeLayout>

           <androidx.recyclerview.widget.RecyclerView
               android:id="@+id/recycler_shopping"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_gravity="center_vertical"/>

       </LinearLayout>


           <LinearLayout
               android:layout_margin="8dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:weightSum="3">

               <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="2"
                   android:text="Total Price: "
                   android:textSize="24sp"
                   android:textStyle="bold"/>

               <TextView
                   android:id="@+id/tv_total_price"
                   android:gravity="right"
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="wrap_content"
                   android:text="$100"
                   android:textColor="#E91E1E"
                   android:textSize="26sp"
                   android:textStyle="bold"/>
           </LinearLayout>


       <com.google.android.material.button.MaterialButton
           app:cornerRadius="14dp"
           android:height="56dp"
           android:id="@+id/btn_confirm"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Confirm"/>

   </LinearLayout>

</ScrollView>